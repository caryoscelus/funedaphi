<?xml version="1.0" encoding="UTF-8"?>
<mod>
    <!-- to use generic movement -->
    <require file="movement.xml"/>
    
    <keymap>
        <action name="suicide">
            <arg name="subject" value="entity"/>
            <bind key="X"/>
        </action>
        <action name="use-here">
            <arg name="subject" value="entity"/>
            <bind key="A"/>
        </action>
        <action name="fight">
            <arg name="subject" value="entity"/>
            <arg name="target" value="direction"/>
            <bind key="F"/>
        </action>
    </keymap>
</mod>
